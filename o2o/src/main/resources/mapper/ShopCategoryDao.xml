<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper3.0//EN"
        "http://mybatis.org/dad/mybatis-3-mapper.dtd">
<mapper namespace="com.o2o.pn.dao.ShopCategoryDao">
    <select id="queryShopCategory" resultType="com.o2o.pn.entity.ShopCategory">
        SELECT
            shop_category_id,
            shop_category_name,
            shop_category_desc,
            shop_category_img,
            priority,
            create_time,
            last_edit_time,
            parent_id
        FROM tb_shop_category
        <where>
            <if test="shopCategoryCondition ==null">
                and parent_id is null
            </if>
            <if test="shopCategoryCondition !=null">
                and parent_id is not null
        </if>
            <if test="shopCategoryCondition !=null and shopCategoryCondition.parent!=null and shopCategoryCondition.parent.shopCategoryId != null">
                and parent_id = #{shopCategoryCondition.parent.shopCategoryId}
            </if>
        </where>
        ORDER BY priority DESC
    </select>

</mapper>