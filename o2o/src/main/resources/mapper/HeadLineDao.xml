<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper3.0//EN"
        "http://mybatis.org/dad/mybatis-3-mapper.dtd">
<mapper namespace="com.o2o.pn.dao.HeadLineDao">
        <select id="queryHeadLine" resultType="com.o2o.pn.entity.HeadLine">
            SELECT
            line_id,
            line_name,
            line_link,
            line_img,
            priority,
            enable_status,
            create_time,
            last_edit_time
            FROM
            tb_head_line
            <where>
                <if test="headLineCondition.enableStatus!=null">
                    and enable_status = #{headLineCondition.enableStatus}
                </if>
            </where>
            ORDER BY
            priority DESC
        </select>
</mapper>